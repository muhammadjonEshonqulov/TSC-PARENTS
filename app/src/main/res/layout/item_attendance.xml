<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_height"
    android:layout_marginStart="@dimen/small_margin"
    android:id="@+id/item_back"
    android:layout_marginEnd="@dimen/small_margin"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/number_sort"
        android:layout_width="@dimen/very_large_text_size"
        android:layout_height="match_parent"
        android:background="@drawable/background_cell"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/semester"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_cell"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:text="6-semestr"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/date_attendance"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_cell"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:text="07-05-2022 11:30"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_cell"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="@dimen/small_margin"
        android:text="Informatika o'qitish metodikasi"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/training"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_cell"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:text="Laboratoriya"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/absent"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_cell"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:text="Ha"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hours"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_cell"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/fio"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_cell"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="start"
        android:includeFontPadding="false"
        android:padding="@dimen/small_margin"
        android:text="JOMURODOV DUSTMUROD MAMASOLI O‘G‘LI"
        android:textColor="@color/black"
        android:textSize="12sp" />
</LinearLayout>
